// Place your settings in this file to overwrite default and user settings.
{
    "editor.wordWrap": "bounded",
    "latex-workshop.latex.toolchain": [
        {
            "command":
                "bibtex",
                "args":[
                    "TexAux\\%DOCFILE%"
                ]
        },
        {
            "command": "latexdaemon",
            "args": [
                "-watch=no",
                "-exit",
                "-aux-directory=TexAux",
                "-afterjob=bibtex",
                "-custom_args=\"-synctex=1 -enable-installer\"",
                "%DOC%.tex"
            ]
        }
    ]
}